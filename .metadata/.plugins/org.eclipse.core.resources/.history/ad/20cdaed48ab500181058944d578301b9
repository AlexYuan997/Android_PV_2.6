package cn.Rivamed.Addresss;

import java.net.Inet4Address;
import java.net.InetAddress;
import java.net.UnknownHostException;

public class GetAddressPort {
	
	public static void main(String[] args) throws UnknownHostException {
		InetAddress address=Inet4Address.getLocalHost();
		InetAddress remoteAddress=InetAddress.getByName("www.baidu.com");
		
		System.out.println(address.getHostAddress()+address.getHostName());
		
		System.out.println(remoteAddress.getHostAddress()+remoteAddress.getHostName());
	}
}
