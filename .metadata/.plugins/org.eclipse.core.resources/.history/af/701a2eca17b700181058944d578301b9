package cn.rivamed.mode1;

import java.awt.List;
import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.ArrayList;

import cn.rivamed.Utils.ThreadPool;



public class TCPThreadServer {
private static	ArrayList<TCPClinet> clientlist=new ArrayList<TCPClinet>();
	
public void	instanceHMIText(String text){

	ServerSocket server = null;
	try {
		server = new ServerSocket(8014);
	} catch (IOException e1) {
		// TODO Auto-generated catch block
		e1.printStackTrace();
	}
	while(true){
	//获取到一个客户端,必须开启新线程
	Socket socket;
	try {
		
		socket = server.accept();
//		System.out.println("接收到新的客舳随接求。。。"+socket.getRemoteSocketAddress());
		
		if (socket!=null) {
			TCPClinet clinet=new TCPClinet(socket);
			clientlist.add(clinet);
			
	//获得一个监听的数据就成功连接池中获取一个线程 
			ThreadPool.getExecutorService().submit(clinet);
			
			
		}
	
	} catch (IOException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	}
		
	//程序结束关闭线程池
	}

     public static void closeStream(){
    	 TCPThreadServer
    	 
    	 
    	  
  		try {
			inputStream.close();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			try {
				outputStream.close();
			} catch (Exception e2) {
				// TODO: handle exception
				try {
					socket.close();
				} catch (Exception e3) {
					// TODO: handle exception
					e3.getMessage();
				}
			}
		}
      }


public ArrayList<TCPClinet> getClientlist() {
	return clientlist;
}

public void setClientlist(ArrayList<TCPClinet> clientlist) {
	this.clientlist = clientlist;
}

	//	static Thread thread;
	public static void main(String[] args) {


	}


}
